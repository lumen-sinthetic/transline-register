{
  "$schema": "https://biomejs.dev/schemas/2.2.5/schema.json",
  "vcs": {
    "enabled": true,
    "defaultBranch": "main",
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "lineWidth": 80,
    "lineEnding": "lf"
  },
  "javascript": {
    "formatter": {
      "trailingCommas": "es5",
      "quoteStyle": "double",
      "indentWidth": 2,
      "semicolons": "always",
      "attributePosition": "multiline",
      "bracketSpacing": true,
      "arrowParentheses": "asNeeded",
      "lineWidth": 80
    }
  },
  "json": {
    "formatter": {
      "indentWidth": 2,
      "lineWidth": 80,
      "lineEnding": "lf",
      "trailingCommas": "none"
    }
  },
  "assist": {
    "enabled": false,
    "actions": {
      "source": {
        "organizeImports": "off"
      }
    }
  },

  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "suspicious": {
        "noDuplicateFontNames": "off",
        "noExplicitAny": "warn",
        "noArrayIndexKey": "warn"
      },
      "correctness": {
        "noUnusedVariables": "warn",
        "useExhaustiveDependencies": "off",
        "noUnusedImports": "warn",
        "useUniqueElementIds": "off"
      },
      "style": {
        "useImportType": "off"
      },
      "security": {
        "noDangerouslySetInnerHtml": "warn"
      },
      "a11y": {
        "useKeyWithClickEvents": "off",
        "useKeyWithMouseEvents": "off",
        "useFocusableInteractive": "off",
        "useSemanticElements": "error",
        "noSvgWithoutTitle": "off",
        "noLabelWithoutControl": "off",
        "noStaticElementInteractions": "off"
      },
      "complexity": {
        "noExcessiveCognitiveComplexity": "off",
        "noStaticOnlyClass": "off",
        "noThisInStatic": "info"
      },
      "performance": {
        "noDelete": "off"
      }
    },

    "domains": {
      "next": "recommended",
      "react": "recommended"
    }
  },
  "files": {
    "ignoreUnknown": true,
    "includes": ["**", "!node_modules", "!.next", "!dist", "!build", "!config"]
  }
}
